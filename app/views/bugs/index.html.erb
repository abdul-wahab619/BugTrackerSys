<h1>List of Bugs</h1>

<%= link_to 'New Bug', new_bug_path %>

<div style="overflow-x:auto;">
  <table style="width:100%; border-collapse:collapse; margin-bottom:20px; font-family:Arial, sans-serif;">
    <thead>
      <tr>
        <th style="border:1px solid #000;">Id</th>
        <th style="border:1px solid #000;">Title</th>
        <th style="border:1px solid #000;">Deadline</th>
        <th style="border:1px solid #000;">Type</th>
        <th style="border:1px solid #000;">Status</th>
        <th style="border:1px solid #000;">Project</th>
        <th style="border:1px solid #000;">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @bugs.each do |bug| %>
        <tr>
          <td style="padding:10px; border:1px solid #000;"><%= bug.id %></td>
          <td style="padding:10px; border:1px solid #000;"><%= bug.title %></td>
          <td style="padding:10px; border:1px solid #000;"><%= bug.deadline %></td>
          <td style="padding:10px; border:1px solid #000;"><%= bug.bug_type %></td>
          <td style="padding:10px; border:1px solid #000;"><%= bug.status %></td>
          <td style="padding:10px; border:1px solid #000;"><%= bug.project.title %></td>
          <td style="padding:10px; border:1px solid #000;">
            <%= link_to 'Show', bug %>
            <%= link_to 'Edit', edit_bug_path(bug) %>
            <%= link_to 'Destroy', bug_path(bug), data: {
              turbo_method: :delete,
              turbo_confirm: 'Are you sure?'
            } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>